<body>
  <div id="map"></div>
  <script>
    mapboxgl.accessToken = 'pk.eyJ1IjoidmVsbG9kcml2ZXIiLCJhIjoiY21iMGc2azhiMHcyNDJrcTJrN3F3dnp1bSJ9.A6iU7GA4IixnaTbhJPe9hQ'; // üîê Insira sua chave Mapbox

    const map = new mapboxgl.Map({
      container: 'map',
      style: 'mapbox://styles/mapbox/streets-v11',
      center: [-51.6108, -28.7835], // Posi√ß√£o inicial (exemplo: Nova Prata - RS)
      zoom: 14
    });

    // Adiciona controle de localiza√ß√£o no canto
    const geolocate = new mapboxgl.GeolocateControl({
      positionOptions: {
        enableHighAccuracy: true
      },
      trackUserLocation: true,
      showUserHeading: true
    });

    map.addControl(geolocate);

    map.on('load', () => {
      geolocate.trigger(); // Centraliza no usu√°rio ao carregar
    });
  </script>
